{
    "manifest_version": 2,
    "name": "Steam Name Changer",
    "version": "1.3",
    "description": "__MSG_description__",
    "icons": {
        "16": "img/16.png",
        "32": "img/32.png",
        "48": "img/48.png",
        "128": "img/128.png"
    },
    "permissions": [
        "storage",
        "notifications",
        "cookies",
        "contextMenus",
        "http://steamcommunity.com/*",
        "https://steamcommunity.com/*",
        "https://api.steampowered.com/*"
    ],
	"optional_permissions": [
		"<all_urls>"
	],
    "applications": {
        "gecko": {
          "id": "{b2696e0d-327b-41a0-aafb-e2c15aefebc8}",
          "strict_min_version": "55.0"
        }
    },
    "background": {
        "scripts": [
            "js/jquery.min.js",
            "js/background.js"
        ]
    },
    "default_locale": "en",
    "browser_action": {
        "default_title": "Steam Name Changer",
        "default_icon": "img/48.png",
        "default_popup": "html/popup.html"
    },
    "short_name": "SNC",
	"options_ui": {
		"chrome_style": true,
		"page": "html/options.html"
	}
}