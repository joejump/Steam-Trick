{
    "manifest_version": 2,
    "name": "Steam Name Changer",
    "version": "0",
    "description": "__MSG_description__",
    "icons": {
        "16": "img/16.png",
        "32": "img/32.png",
        "48": "img/48.png",
        "128": "img/128.png"
    },
    "permissions": [
        "storage",
        "notifications",
        "cookies",
        "http://steamcommunity.com/*",
        "https://steamcommunity.com/*"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "default_locale": "en",
    "browser_action": {
        "default_title": "Steam Name Changer",
        "default_icon": "img/48.png",
        "default_popup": "html/popup.html"
    },
    "short_name": "SNC",
	"options_ui": {
		"chrome_style": true,
		"page": "html/options.html"
	}
}